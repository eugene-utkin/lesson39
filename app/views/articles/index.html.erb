<% @articles.each do |article| %>
	<h2><%= article.title %></h2>

	<p>
		<%= article.text %>
	</p>

	<p>
		<%= link_to 'Show', article_path(article) %> |
		<%= link_to 'Edit', edit_article_path(article) %> |
		<%= button_to 'Delete', article_path(article),
              method: :delete %>
	</p>

	<hr />
<% end %>